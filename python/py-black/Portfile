# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           python 1.0
PortGroup           select 1.0

name                py-black
version             20.8b1
categories-append   devel
platforms           darwin
supported_archs     noarch
license             MIT

python.versions     38 39

maintainers         {@jandemter demter.de:jan} openmaintainer

description         The uncompromising Python code formatter
long_description    Black is the uncompromising Python code formatter. \
                    By using it, you agree to cede control over minutiae \
                    of hand-formatting. In return, Black gives you speed, \
                    determinism, and freedom from pycodestyle nagging \
                    about formatting. You will save time and mental energy \
                    for more important matters.

homepage            https://github.com/psf/black

checksums           rmd160  63de27671405a15165325731e0b74e4bfe1be80d \
                    sha256  1c02557aa099101b9d21496f8a914e9ed2222ef70336404eeeac8edba836fbea \
                    size    1096433

if {${name} ne ${subport}} {
    depends_build-append    port:py${python.version}-setuptools_scm
    depends_run             port:black_select
    depends_lib-append      port:py${python.version}-click \
                            port:py${python.version}-appdirs \
                            port:py${python.version}-toml \
                            port:py${python.version}-typed-ast \
                            port:py${python.version}-regex \
                            port:py${python.version}-pathspec \
                            port:py${python.version}-typing_extensions \
                            port:py${python.version}-mypy_extensions

    post-destroot   {
        # blackd entry point gets created despite not being selected
        file delete ${destroot}${prefix}/bin/blackd-${python.branch}
    }

    select.group            black
    select.file             ${filespath}/black${python.version}
    notes-append "
To make the Python ${python.branch} version of black the one that is run\
when you execute the commands without a version suffix, e.g. 'black', run:

sudo port select --set ${select.group} [file tail ${select.file}]
"

    livecheck.type      none
}
